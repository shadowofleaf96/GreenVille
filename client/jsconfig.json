{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/app/*": ["./src/app/*"],
      "@/components/*": ["./src/components/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/store/*": ["./src/store/*"],
      "@/services/*": ["./src/services/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/frontoffice/*": ["./src/app/(frontoffice)/*"],
      "@/admin/*": ["./src/app/admin/*"]
    }
  },
  "jsx": "preserve",
  "include": ["**/*.js", "**/*.jsx"],
  "exclude": ["node_modules"]
}
